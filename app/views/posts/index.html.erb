<% if notice %>
  <aside id="notice"><%= notice %></aside>
<% end %>

<h1>Posts</h1>

<table>
  <thead>
    <tr>
      <th>Image</th>
      <th>Title</th>
      <th>Description</th>
      <th>Image url</th>
      <th>Price</th>
      <th colspan="3">
        <%= link_to 'New post', posts_new_path %>
      </th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr class="<%= cycle('list_line_odd', 'list_line_even') %>">
        <td>
          <%= image_tag(post.image_url.thumb.url, alt: 'Image') if post.image_url? %>
        </td>

        <td><%= post.title %></td>
        <td><%= truncate(strip_tags(post.description), length: 80) %></td>
        <td><%= post.image_url %></td>
        <td><%= post.price %></td>
        <td><%= link_to 'Show', post %></td>
        <td><%= link_to 'Edit', edit_post_path(post) %></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New post', posts_new_path %>
