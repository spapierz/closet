<h1>Outfits:</h1> <h4>This is my shopping cart</h4>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Start time</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @outfits.each do |outfit| %>
      <tr>
        <td><%= outfit.name %></td>
        <!-- <td><%= outfit.start_time %></td> -->
        <td><%= link_to 'Show', outfit %></td>
        <td><%= link_to 'Edit', edit_outfit_path(outfit) %></td>
        <td><%= link_to 'Destroy', outfit, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<h5>This is my catalog</h5>

<div>
  <h4>Shirts</h4>
  <ul>
    <% @shirts.each do |shirt| %>
        <li><%= shirt.caption %></li>
    <% end %>
  </ul>
</div>

<div>
  <h4>Pants</h4>
  <ul>
    <% @pants.each do |pants| %>
        <li><%= pants.caption %></li>
    <% end %>
  </ul>
</div>

<div>
  <h4>Shoes</h4>
  <ul>
    <% @shoes.each do |shoes| %>
        <li class="clothing-article"><%= shoes.caption %></li>
    <% end %>
  </ul>
</div>

